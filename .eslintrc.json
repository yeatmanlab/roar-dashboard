{
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-recommended", "prettier", "plugin:cypress/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-cycle": "off",
    "no-restricted-syntax": "off",
    "camelcase": "off",
    "func-names": 0,
    "object-shorthand": 0,
    "implicit-arrow-linebreak": 0
  },
  "ignorePatterns": ["**/node_modules/**", "**/dist/**", "**/lib/**", "roar-firebase-functions"]
}
