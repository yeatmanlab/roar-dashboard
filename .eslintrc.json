{
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vuejs-accessibility/recommended",
    "plugin:vue/vue3-recommended",
    "prettier",
    "plugin:cypress/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-cycle": "off",
    "no-restricted-syntax": "off",
    "camelcase": "off",
    "func-names": 0,
    "object-shorthand": 0,
    "implicit-arrow-linebreak": 0,
    "vuejs-accessibility/label-has-for": [
      "error",
      {
        "components": ["label", "PvFloatLabel"],
        "controlComponents": ["input", "PvDropdown", "PvInputText", "PvCheckbox"],
        "required": {
          "some": ["nesting", "id"]
        },
        "allowChildren": false
      }
    ]
  },
  "ignorePatterns": ["**/node_modules/**", "**/dist/**", "**/lib/**", "roar-firebase-functions"]
}
