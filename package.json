{
  "name": "roar-dashboard",
  "private": true,
  "bin": {
    "setup-certs": "./scripts/setup-certs.sh"
  },
  "version": "3.14.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:setup:certs": "setup-certs",
    "watch": "turbo watch dev",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "format": "turbo run format",
