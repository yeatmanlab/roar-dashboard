{
  "name": "roar-dashboard",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite --force --host",
    "dev:emulate": "export VITE_FIREBASE_EMULATOR=true && vite --force --host",
    "emulate:admin": "source firebase/emulate_admin.sh",
    "emulate:assessment": "source firebase/emulate_assessment.sh",
    "emulate:export": "source firebase/export_admin.sh && source firebase/export_assessment.sh",
    "emulate:start": "unset GOOGLE_APPLICATION_CREDENTIALS && npm run emulate:admin && npm run emulate:assessment",
    "emulate:stop": "ps -e | grep 'firebase emulators:start' | grep -v 'grep' | grep -v 'rg' | sed -e 's/^[ \t]*//' | tr -s ' ' | cut -d ' ' -f 1 | xargs kill -s INT",
    "format": "prettier . --write",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "postversion": "GIT_REMOTE=$(git remote -v | grep \"yeatmanlab/roar-dashboard.git \\(push\\)\" | cut -f 1) && git push $GIT_REMOTE && git push $GIT_REMOTE --tags",
    "prepare": "husky install",
    "preversion": "npm run lint",
    "preview": "vite preview",
    "version": "npm run format && git add -A"
  },
  "dependencies": {
    "@bdelab/roam-fluency": "^1.8.2",
    "@bdelab/roar-firekit": "^4.6.0",
    "@bdelab/roar-letter": "^1.4.2",
    "@bdelab/roar-multichoice": "^1.8.2",
    "@bdelab/roar-pa": "^1.5.0",
    "@bdelab/roar-sre": "^1.10.2",
    "@bdelab/roar-swr": "^1.7.1",
    "@bdelab/roar-utils": "^1.0.17",
    "@bdelab/roar-vocab": "^1.5.1",
    "@tanstack/vue-query": "^4.35.7",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vueuse/core": "^10.7.2",
    "@vueuse/head": "^2.0.0",
    "axios": "^1.6.7",
    "chart.js": "^4.4.1",
    "firebase": "^10.8.0",
    "lodash": "^4.17.21",
    "marked": "^11.2.0",
    "papaparse": "^5.4.1",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "primeflex": "^3.3.1",
    "primeicons": "^6.0.1",
    "primevue": "^3.47.2",
    "vega": "^5.27.0",
    "vega-embed": "^6.24.0",
    "vega-lite": "^5.16.3",
    "vite-plugin-node-polyfills": "^0.19.0",
    "vue": "^3.4.15",
    "vue-google-maps-community-fork": "^0.3.1",
    "vue-router": "^4.2.5",
    "vue3-text-clamp": "^0.1.2",
    "zipson": "^0.2.12"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.21.1",
    "husky": "^9.0.10",
    "prettier": "3.2.4",
    "sass": "^1.70.0",
    "vite": "^5.0.12",
    "vite-plugin-favicons-inject": "^2.2.0"
  }
}
