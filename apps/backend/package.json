{
  "name": "roar-backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "rollup -cw --environment NODE_ENV:development",
    "build": "rm -rf dist && rollup -c --environment NODE_ENV:production",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "check-types": "tsc --noEmit --watch",
    "db:gen:app": "drizzle-kit generate --config ./drizzle.core.config.ts",
    "db:gen:assess": "drizzle-kit generate --config ./drizzle.assessment.config.ts",
    "db:migrate:app": "drizzle-kit migrate --config ./drizzle.core.config.ts",
    "db:migrate:assess": "drizzle-kit migrate --config ./drizzle.assessment.config.ts",
    "db:push:app": "drizzle-kit push --config ./drizzle.core.config.ts",
    "db:push:assess": "drizzle-kit push --config ./drizzle.assessment.config.ts",
    "db:studio:app": "drizzle-kit studio --config ./drizzle.core.config.ts",
    "db:studio:assess": "drizzle-kit studio --config ./drizzle.assessment.config.ts"
  },
  "dependencies": {
    "@roar-dashboard/api-contract": "*",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/express": "^3.52.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "firebase-admin": "^13.5.0",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@roar-dashboard/eslint-config": "*",
    "@roar-dashboard/typescript-config": "*",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-run": "^3.1.0",
    "@types/express": "^5.0.3",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "fishery": "^2.3.1",
    "rollup": "^4.46.3",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-node-externals": "^8.0.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "vitest": "^3.2.4"
  }
}
