{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV", 
    "MODE", 
    "CI",
    "DOTENV_PRIVATE_KEY_TEST",
    "DOTENV_PRIVATE_KEY_DEVELOPMENT",
    "DOTENV_PRIVATE_KEY_STAGING",
    "DOTENV_PRIVATE_KEY_PRODUCTION"
  ],
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "outputs": ["coverage/**"]
    },
    "format": {},
    "format:check": {},
    "lint": {},
    "lint:fix": {}
  }
}
